{% extends 'base.html.twig' %}

{% block body %}
    {% block header %}
        <div class="container col-12">
            <div class="row">
            <div class="container center col-4 d-flex align-items-center">
                <p><img style="border-radius: 16px" width="32px" height="32px" src="{{ asset('img/avatars/') }}{{ user.email }}.png" alt="avatar"> {{ user.firstname }}
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><img width="24px" height="24px" src="{{ asset('img/app/config.png') }}" alt="config"></a>
                <a href="{{ path('app_logout') }}"><img width="24px" height="24px" src="{{ asset('img/app/logout.png') }}" alt="logout"></a></p>
            </div>
            <div class="container center col-4">
                {% if social %}
                    <p class="family white">{{ social.name }} <a href="{{ path('socialnet_base_edit', {'id':social.id}) }}"><img width="16px" height="16px" src="{{ asset('img/app/config.png') }}" alt="config"></a></p>
                        <a href="{{ path('social_net') }}"><img width="48px" height="48px" src="{{ asset('img/socialnet/') }}{{ social.name }}.png" alt="socialnet"></a>
                {% endif %}
            </div>
            <div class="container col-4 align-items-center d-flex justify-content-end">
                <a href="{{ path('default') }}"><p class="family orange low">Family <img width="48px" height="48px" src="{{ asset('img/app/logo.png') }}" alt="logo"></p></a>
            </div>
            </div>
        </div>
        <div class="infinite newSection d-flex flex-row">
            <ul>
                <li><a href="{{ path('invitation') }}">{% trans %}Invitations{% endtrans %}</a></li>
                <li><a href="{{ path('album') }}">{% trans %}Albums{% endtrans %}</a></li>
            </ul>
        </div>
    {% endblock %}
    {% block main %}{% endblock %}
{% endblock %}
