{% extends 'withHeader.html.twig' %}

{% block title %}Family Albums{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="upper">{% trans %}Your albums:{% endtrans %}</h1>
        <div class="row col-xs-12 newSection">
            {% for album in albums %}
                <div class="cromo col-xs-12 d-flex-column col-md-6 col-lg-4">
                    <div class="cromo-image">
                        <img src="{{ asset('img/albums/') }}{{ album.image }}" alt="logoAlbum">
                    </div>
                    <div class="cromo-name text-center">
                        {{ album.name }}
                    </div>
                    <div class="cromo-content text-justify">
                        {{ album.description }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="link text-center">
            <a href="{{ path('album_base_new') }}">{% trans %}Create new album{% endtrans %}</a>
        </div>
    </div>
{% endblock %}
