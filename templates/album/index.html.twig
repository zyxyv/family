{% extends 'withHeader.html.twig' %}

{% block title %}Family Albums{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="upper">{% trans %}Your albums:{% endtrans %}</h1>
        <div class="row col-xs-12 newSection">
            {% for album in albums %}
                <div class="cromo col-xs-12 d-flex-column col-md-6 col-lg-4">
                    <div class="row cromo-image col-xs-12">
                        <div class="col d-flex justify-content-start align-items-center">
                        {% if album.owner.id == user.id %}
                            <a href="{{ path('album_base_edit', {'id': album.id}) }}">
                                <img width="32px" height="32px" src="{{ asset('img/app/config.png') }}" alt="config">
                            </a>
                        {% endif %}
                        </div>
                        <div class="col">
                            <a href="{{ path('album_base_show', {'id': album.id}) }}">
                            <img class="cromo-img" src="{{ asset('img/albums/') }}{{ album.name }}.png" alt="logoAlbum">
                            </a>
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="cromo-name text-center">
                        {{ album.name }}
                    </div>
                    <div class="cromo-content text-justify">
                        {{ album.description }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="container d-flex justify-content-center">
            <a class="link" href="{{ path('album_base_new') }}">{% trans %}Create new album{% endtrans %}</a>
        </div>
    </div>
{% endblock %}
